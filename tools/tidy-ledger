#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export PYTHONPATH="${SCRIPT_DIR}:${PYTHONPATH:-}"
if [[ -x "${SCRIPT_DIR}/.venv/bin/python" ]]; then
  exec "${SCRIPT_DIR}/.venv/bin/python" -m tidy_ledger.cli "$@"
fi
exec python3 -m tidy_ledger.cli "$@"
